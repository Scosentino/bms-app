<div class="invoice-box">
  <table cellpadding="0" cellspacing="0">
    <tbody><tr class="top">
      <td colspan="2">
        <table>
          <tbody><tr>
            <td class="title">
              <img src="https://i.imgur.com/GPKmsua.png" style="width:100%; max-width:300px;">
            </td>
          </tr>
          </tbody></table>
      </td>
    </tr>

    <tr class="information">
      <td colspan="2">
        <table>
          <tbody><tr>
            <td>New Customer Order<br><br><%= @customer.full_name %>
              <br>
              <%= @customer.phone_number %>
              <br>
              <%= @customer.email %>
              <br>
              <%= @customer.try(:business).try(:city) %> - <%= @customer.try(:business).try(:legal_name) %> - <%= @customer.job_title %> </td>
          </tr>
          </tbody></table>
      </td>
    </tr>

    <tr class="heading">
      <td>
        Payment Method
      </td>
      <td></td>
    </tr>

    <tr class="details">
      <td>Bank Account Ending ********<%= @customer.try(:payment_method).try(:bank_account_number).try(:last, 4) %></td>
    </tr>
    <% if @customer.payment_method.present? && (@customer.payment_method.credit_card? || @customer.payment_method.debit_card?) %>
      <tr class="details">
        <td>
          Credit Card/Debit Card ending ************<%= @customer.payment_method.card_number.last(4) %>
        </td>
      </tr>
    <% end %>

    </tbody></table>
</div>
