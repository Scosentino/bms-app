<%= javascript_include_tag 'wizards/step3' %>

<section id="wizard" class="overlay">
  <div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
      <div class="registrations_order_box">
        <h1 class="text-center">Information about you</h1>
        <div class="register_order_fields_with_steps_box">
          <ol class="track-progress" data-steps="5">
            <li class="done"><span><%= link_to "Step 1", step1_wizard_path %></span></li><!--
            --><li class="done"><span><%= link_to "Step 2", step2_wizard_path %></span></li><!--
            --><li class="active"><span>Step 3</span></li><!--
            --><li><span>Step 4</span></li><!--
            --><li><span>Step 5</span></li>
          </ol>

          <%= form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
            <%= @user_wizard.errors.full_messages.first if @user_wizard.errors.any? %>

            <%= hidden_field_tag :current_step, 'step3' %>
            <%= f.hidden_field :email, value: @user_wizard.user.email %>
            <%= f.label :first_name, 'data-old_text': 'First Name' %>
            <%= f.text_field :first_name %>
            <%= f.label :last_name, 'data-old_text': 'Last Name' %>
            <%= f.text_field :last_name %>
            <%= f.label :job_title, 'data-old_text': 'Job Title' %>
            <%= f.text_field :job_title %>
            <%= f.label :phone_number, 'data-old_text': 'Phone Number' %>
            <%= f.text_field :phone_number %>
            <%= f.label :ssn, 'data-old_text': 'SSN' %><p>* last 4 numbers of SSN</p>
            <%= f.text_field :ssn %>

            <%= f.submit 'Continue' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>