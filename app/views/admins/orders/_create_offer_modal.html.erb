<div class="modal fade" id="create_offer_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered bms_modal_style" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Offer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="bms_creation_form">
          <%= form_for(Offer.new, url: admins_offers_path, method: :post) do |f| %>
            <%= f.hidden_field :customer_id, value: @order.customer.id %>
            <%= f.hidden_field :order_id, value: @order.id %>

            <div class="create_form_input">
              <%= f.label :estimated_annual_savings, 'Offer rate' %>
              <%= f.text_field :estimated_annual_savings, type: 'number' %>
            </div>

            <%= f.submit 'Create' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>