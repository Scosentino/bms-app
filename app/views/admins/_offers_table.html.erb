<div class="col-md-12 col-lg-12 col-sm-12">
  <table id="offers_table" class="display admin_dashboard_table">
    <thead>
    <tr>
      <th>Created At</th>
      <th class="th-ezr">Customer Name</th>
      <th class="th-ezr">Status</th>
      <th class="th-ezr">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @offers.each do |o| %>
      <tr>
        <td><%= o.created_at.strftime('%b %e %Y, %l:%M %p') %></td>
        <td class="td-ezr"><%= o.customer.full_name %></td>
        <td class="td-ezr"><%= o.status_html.html_safe %></td>
        <td class="td-ezr"><%= link_to 'Show', admins_offer_path(id: o.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<script>
    $(document).ready(function(){
        $('#offers_table').DataTable();
    });
</script>