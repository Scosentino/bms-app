<div class="col-md-12 col-lg-12 col-sm-12">
  <table class="table-ezr admin_dashboard_table">
    <thead>
      <tr>
        <th>Full name</th>
        <th class="th-ezr">Email</th>
        <th class="th-ezr">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.full_name %></td>
        <td class="td-ezr"><%= c.email %></td>
        <td class="td-ezr"><%= link_to 'Show', admins_customers_path(id: c.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>