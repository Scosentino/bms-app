<div class="col-md-12 col-lg-12 col-sm-12">
  <table id="customers_table" class="display nowrap admin_dashboard_table" style="width: 100%">
    <thead>
      <tr>
        <th>Full name</th>
        <th class="th-ezr">Email</th>
        <th class="th-ezr">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.full_name %></td>
        <td class="td-ezr"><%= c.email %></td>
        <td class="td-ezr"><%= link_to 'Show', admins_customers_path(id: c.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script>
    $(document).ready(function(){
        $('#customers_table').DataTable({destroy: true,responsive: true});
    });
</script>