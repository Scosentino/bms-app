<section id="content-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="bms_creation_form">
          <h3 class="text-center text-uppercase text-white">Create Order</h3>
          <%= form_for(Order.new, url: customers_orders_path, method: :post) do |f| %>
            <div class="create_form_input">
              <%= f.label :title %>
              <%= f.text_field :title %>
            </div>
            <div class="create_form_input">
              <%= f.label :description %>
              <%= f.text_area :description %>
            </div>
            <div class="create_form_input">
              <%= f.label :documents, 'Upload Documents' %>
              <%= f.file_field :documents, multiple: true %>
            </div>
            <div class="create_form_input">
              You need to accept terms <%= f.check_box :accept_and_terms %>
            </div>

            <%= f.submit 'Create' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>