<!--== Page Title Start ==-->
<div class="page-title section-padding overlay">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="page-title-wrap">
          <h2><%= @order.created_at.strftime('%b %e %Y, %l:%M %p') %></h2>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="<%= customers_path %>">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">Order</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<!--== Page Title End ==-->

<section id="content-area">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-sm-12 show_box">
        <div class="row">
          <div class="col-md-12 col-lg-12 col-sm-12 show_box_item">
            <div class="row">
              <div class="col-md-4 col-lg-4 col-sm-5 show_box_title">
                Status:
              </div>
              <div class="col-md-8 col-lg-8 col-sm-7 show_box_data">
                <%= @order.status_html.html_safe %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 col-lg-12 col-sm-12 show_box_item">
            <div class="row">
              <div class="col-md-4 col-lg-4 col-sm-5 show_box_title">
                Reviewed:
              </div>
              <div class="col-md-8 col-lg-8 col-sm-7 show_box_data">
                <%= @order.reviewed %>
              </div>
            </div>
          </div>
        </div>

        <% if @order.submitted? %>
          <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 show_box_item">
              <div class="row">
                <div class="col-md-4 col-lg-4 col-sm-5 show_box_title">
                  Policy
                </div>
                <div class="col-md-8 col-lg-8 col-sm-7 show_box_data">
                  <%= link_to 'Show Policy', generate_contract_path(type: 'order', id: @order.id, customer_id: @order.customer.id), class: 'show_contract_button', target:'_blank'%>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col-md-12 col-lg-12 col-sm-12 show_box_item">
            <div class="row">
              <div class="col-md-4 col-lg-4 col-sm-5 show_box_title">
                Order created at:
              </div>
              <div class="col-md-8 col-lg-8 col-sm-7 show_box_data">
                <%= @order.created_at.strftime('%b %e %Y, %l:%M %p') %>
              </div>
            </div>
          </div>
        </div>

        <% if @offer.present? %>
        <div class="offer_box">
          <h4>Offer</h4>
          <%= render partial: 'customers/offers/form' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>